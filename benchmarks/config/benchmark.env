# Benchmark Configuration

# Database settings
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=bench

# Target endpoints
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

PGBOUNCER_HOST=localhost
PGBOUNCER_PORT=6432

MULTIGRES_HOST=localhost
MULTIGRES_PORT=15432

# pgbench parameters
PGBENCH_SCALE=10          # Scale factor (10 = ~1.5MB database)
PGBENCH_TIME=60           # Duration per test in seconds
PGBENCH_JOBS=4            # Number of worker threads
WARMUP_TIME=10            # Warmup duration before measurement

# Client counts to test
PGBENCH_CLIENTS="10 50 100 250 500"

# Test types to run
# simple: SELECT 1 (pure overhead test)
# default: pgbench TPC-B like workload
# readonly: SELECT-only workload
TEST_TYPES="simple default readonly"

# Systems to benchmark
TARGETS="postgres pgbouncer multigres"

# Results directory
RESULTS_DIR=./results

# Repeat each test N times for statistical significance
REPEATS=3

# Optional: PgDog endpoint (uncomment to enable)
# PGDOG_HOST=localhost
# PGDOG_PORT=6433

# Optional: SPQR endpoint (uncomment to enable)
# SPQR_HOST=localhost
# SPQR_PORT=6434
